{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "lib": ["DOM", "ES2021"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@/tests*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "tests", "jest.config.js"],
}
